{{- if .is_mac -}}

#!/usr/bin/env bash

# System UI/UX, SSD, Input, and Screen configuration
# Based on https://mths.be/osx

set -euo pipefail

# Include common functions
{{ template "common.tmpl" . }}

log_info "Configuring macOS system UI settings..."

# Ask for the administrator password upfront
sudo -v

# Keep-alive: update existing `sudo` time stamp until script has finished
while true; do sudo -n true; sleep 60; kill -0 "$$" || exit; done 2>/dev/null &

###############################################################################
# General UI/UX                                                               #
###############################################################################

log_info "Configuring General UI/UX..."

# Set standby delay to 24 hours (default is 1 hour)
sudo pmset -a standbydelay 86400 2>/dev/null || true

# Disable the sound effects on boot
sudo nvram SystemAudioVolume=" " 2>/dev/null || true

# Control Center settings (Big Sur+)
# Show battery percentage in menu bar
defaults -currentHost write com.apple.controlcenter BatteryShowPercentage -bool true 2>/dev/null || true

# Show Bluetooth in menu bar (18 = show in menu bar)
defaults -currentHost write com.apple.controlcenter Bluetooth -int 18 2>/dev/null || true

# Show Sound in menu bar (18 = show in menu bar)
defaults -currentHost write com.apple.controlcenter Sound -int 18 2>/dev/null || true

# Set highlight color to blue
defaults write NSGlobalDomain AppleHighlightColor -string "0.772549 0.894118 1.000000" 2>/dev/null || true

# Set sidebar icon size to medium
defaults write NSGlobalDomain NSTableViewDefaultSizeMode -int 2 2>/dev/null || true

# Scrollbars: Automatic
defaults write NSGlobalDomain AppleShowScrollBars -string "Automatic" 2>/dev/null || true

# Disable the over-the-top focus ring animation
defaults write NSGlobalDomain NSUseAnimatedFocusRing -bool false 2>/dev/null || true

# Increase window resize speed for Cocoa applications
defaults write NSGlobalDomain NSWindowResizeTime -float 0.001 2>/dev/null || true

# Expand save panel by default
defaults write NSGlobalDomain NSNavPanelExpandedStateForSaveMode -bool true 2>/dev/null || true
defaults write NSGlobalDomain NSNavPanelExpandedStateForSaveMode2 -bool true 2>/dev/null || true

# Expand print panel by default
defaults write NSGlobalDomain PMPrintingExpandedStateForPrint -bool true 2>/dev/null || true
defaults write NSGlobalDomain PMPrintingExpandedStateForPrint2 -bool true 2>/dev/null || true

# Save to disk (not to iCloud) by default
defaults write NSGlobalDomain NSDocumentSaveNewDocumentsToCloud -bool false 2>/dev/null || true

# Automatically quit printer app once the print jobs complete
defaults write com.apple.print.PrintingPrefs "Quit When Finished" -bool true 2>/dev/null || true

# Disable the "Are you sure you want to open this application?" dialog
defaults write com.apple.LaunchServices LSQuarantine -bool false 2>/dev/null || true

# Remove duplicates in the "Open With" menu
/System/Library/Frameworks/CoreServices.framework/Frameworks/LaunchServices.framework/Support/lsregister -kill -r -domain local -domain system -domain user 2>/dev/null || true

# Display ASCII control characters using caret notation in standard text views
defaults write NSGlobalDomain NSTextShowsControlCharacters -bool true 2>/dev/null || true

# Disable Resume system-wide
defaults write com.apple.systempreferences NSQuitAlwaysKeepsWindows -bool false 2>/dev/null || true

# Disable automatic termination of inactive apps
defaults write NSGlobalDomain NSDisableAutomaticTermination -bool true 2>/dev/null || true

# Disable the crash reporter
defaults write com.apple.CrashReporter DialogType -string "none" 2>/dev/null || true

# Set Help Viewer windows to non-floating mode
defaults write com.apple.helpviewer DevMode -bool true 2>/dev/null || true

# Reveal IP address, hostname, OS version, etc. when clicking the clock in the login window
sudo defaults write /Library/Preferences/com.apple.loginwindow AdminHostInfo HostName 2>/dev/null || true

# Restart automatically if the computer freezes
sudo systemsetup -setrestartfreeze on 2>/dev/null || true

# Never go into computer sleep mode
sudo systemsetup -setcomputersleep Off > /dev/null 2>&1 || true

# Check for software updates daily, not just once per week
defaults write com.apple.SoftwareUpdate ScheduleFrequency -int 1 2>/dev/null || true

# Disable smart dashes as they're annoying when typing code
defaults write NSGlobalDomain NSAutomaticDashSubstitutionEnabled -bool false 2>/dev/null || true

###############################################################################
# SSD-specific tweaks                                                         #
###############################################################################

log_info "Configuring SSD optimizations..."

# Disable local Time Machine snapshots
sudo tmutil disable 2>/dev/null || true

# Disable hibernation (speeds up entering sleep mode)
sudo pmset -a hibernatemode 0 2>/dev/null || true

# Disable the sudden motion sensor as it's not useful for SSDs
sudo pmset -a sms 0 2>/dev/null || true

###############################################################################
# Trackpad, mouse, keyboard, Bluetooth accessories, and input                 #
###############################################################################

log_info "Configuring input devices..."

# Trackpad: disable tap to click for this user and for the login screen
defaults write com.apple.driver.AppleBluetoothMultitouch.trackpad Clicking -bool false 2>/dev/null || true
defaults -currentHost write NSGlobalDomain com.apple.mouse.tapBehavior -int 0 2>/dev/null || true
defaults write NSGlobalDomain com.apple.mouse.tapBehavior -int 0 2>/dev/null || true

# Trackpad: unmap bottom right corner to right-click
defaults write com.apple.driver.AppleBluetoothMultitouch.trackpad TrackpadCornerSecondaryClick -int 0 2>/dev/null || true
defaults write com.apple.driver.AppleBluetoothMultitouch.trackpad TrackpadRightClick -bool true 2>/dev/null || true
defaults -currentHost write NSGlobalDomain com.apple.trackpad.trackpadCornerClickBehavior -int 0 2>/dev/null || true
defaults -currentHost write NSGlobalDomain com.apple.trackpad.enableSecondaryClick -bool true 2>/dev/null || true

# Disable "natural" (Lion-style) scrolling
defaults write NSGlobalDomain com.apple.swipescrolldirection -bool false 2>/dev/null || true

# Increase sound quality for Bluetooth headphones/headsets
defaults write com.apple.BluetoothAudioAgent "Apple Bitpool Min (editable)" -int 40 2>/dev/null || true

# Enable full keyboard access for all controls
defaults write NSGlobalDomain AppleKeyboardUIMode -int 3 2>/dev/null || true

# Use scroll gesture with the Ctrl (^) modifier key to zoom
defaults write com.apple.universalaccess closeViewScrollWheelToggle -bool true 2>/dev/null || true
defaults write com.apple.universalaccess HIDScrollZoomModifierMask -int 262144 2>/dev/null || true
# Follow the keyboard focus while zoomed in
defaults write com.apple.universalaccess closeViewZoomFollowsFocus -bool true 2>/dev/null || true

# Disable press-and-hold for keys in favor of key repeat
defaults write NSGlobalDomain ApplePressAndHoldEnabled -bool false 2>/dev/null || true

# Set a blazingly fast keyboard repeat rate (2 = fast, 0 = too aggressive)
defaults write NSGlobalDomain KeyRepeat -int 2 2>/dev/null || true

# Set a short delay until key repeat (15 = short, 10 = too aggressive)
defaults write NSGlobalDomain InitialKeyRepeat -int 15 2>/dev/null || true

# Set language and text formats
defaults write NSGlobalDomain AppleLanguages -array "en" "fr" 2>/dev/null || true
defaults write NSGlobalDomain AppleLocale -string "en_US@currency=EUR" 2>/dev/null || true
defaults write NSGlobalDomain AppleMeasurementUnits -string "Centimeters" 2>/dev/null || true
defaults write NSGlobalDomain AppleMetricUnits -bool true 2>/dev/null || true

# Set the timezone
sudo systemsetup -settimezone "Europe/Paris" > /dev/null 2>&1 || true

# Disable auto-correct
defaults write NSGlobalDomain NSAutomaticSpellingCorrectionEnabled -bool false 2>/dev/null || true

# Remove the toolbar title rollover delay
defaults write NSGlobalDomain NSToolbarTitleViewRolloverDelay -float 0 2>/dev/null || true

###############################################################################
# Screen                                                                      #
###############################################################################

log_info "Configuring screen settings..."

# Require password immediately after sleep or screen saver begins
defaults write com.apple.screensaver askForPassword -int 1 2>/dev/null || true
defaults write com.apple.screensaver askForPasswordDelay -int 0 2>/dev/null || true

# Save screenshots to the desktop
defaults write com.apple.screencapture location -string "${HOME}/Desktop" 2>/dev/null || true

# Save screenshots in PNG format
defaults write com.apple.screencapture type -string "png" 2>/dev/null || true

# Disable shadow in screenshots
defaults write com.apple.screencapture disable-shadow -bool true 2>/dev/null || true

# Include date in screenshot filenames
defaults write com.apple.screencapture include-date -bool true 2>/dev/null || true

# Enable HiDPI display modes (requires restart)
sudo defaults write /Library/Preferences/com.apple.windowserver DisplayResolutionEnabled -bool true 2>/dev/null || true

log_success "System UI configuration complete"

{{- end -}}
