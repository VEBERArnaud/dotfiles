    "diff-so-fancy"
    "direnv"
    "findutils"
    "fzf"
    "gh"
    "gimme-aws-creds"
    "git"
    "gnu-sed"
    "gnu-tar"
    "htop"
    "jq"
    "moreutils"
    "openssl@3"
    "reattach-to-user-namespace"
    "shellcheck"
